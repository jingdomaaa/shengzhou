<block wx:if="{{$taroCompReady}}">
    <view class="user-profile">
        <image class="user-profile__bg" src="{{bg}}" mode="widthFix"></image>
        <view class="user-profile__wrap">
            <view class="user-profile__avatar">
                <image class="user-profile__avatar-img" src="{{userInfo.avatar || defaultAvatar}}"></image>
            </view>
            <view class="user-profile__info" bindtap="handleLogin"><text class="user-profile__info-name">{{'未登录'}}</text><text class="user-profile__info-tip">点击登录账号</text>
            </view>
        </view>
    </view>
</block>